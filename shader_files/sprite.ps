#version 460 core
in vec2 TexCoords;
out vec4 color;

uniform sampler2D image;
uniform float light;

void main()
{   
    vec4 tex_color = texture(image, TexCoords);

    if(tex_color.a < 0.1)
        discard;

    if(light >= 0)
    {
        vec4 v_light = { light, light, light, 1.0 };
        color = v_light * tex_color;
    }
    else
    {
        color = tex_color;
    }
}  