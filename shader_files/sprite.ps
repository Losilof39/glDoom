#version 330 core
in vec2 TexCoords;
out vec4 color;

uniform sampler2D image;
uniform float light;

void main()
{   
    if(light >= 0)
    {
        vec4 v_light = { light, light, light, 1.0 };
        color = v_light * texture(image, TexCoords);
    }
    else
    {
        color = texture(image, TexCoords);
    }
}  